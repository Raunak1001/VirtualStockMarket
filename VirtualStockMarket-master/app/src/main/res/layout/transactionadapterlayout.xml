<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="5dp"
    card_view:cardCornerRadius="5dp"
    android:elevation="10dp"
    card_view:cardBackgroundColor="@android:color/black"
    android:layout_marginLeft="5dp">

<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/companynametransaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="APPLE"
                android:textAlignment="gravity"
                android:textColor="@color/colorAccent"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/shareratetransaction"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/companyNameTextView"
                android:text="5$"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="24dp"
                android:layout_toEndOf="@+id/amountofsharestransaction" />

            <TextView
                android:id="@+id/amountofsharestransaction"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:text="5$"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="24dp"
                android:layout_below="@+id/companynametransaction" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


